{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "jest-extended"
    ]
  },
  "include": [
    "src/**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "global.d.ts"
  ]
}